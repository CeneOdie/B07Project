<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groceryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_custom_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryApp">
        <activity
            android:name=".SetupStore"
            android:exported="false" />
        <activity
            android:name=".StoreNav"
            android:exported="false"
            android:label="@string/title_activity_store_nav" />
        <activity
            android:name=".CustomerNav"
            android:exported="false"
            android:label="@string/title_activity_customer_nav" />
        <activity
            android:name=".addItem"
            android:exported="false" />
        <activity
            android:name=".listStoreOrders"
            android:exported="false" />
        <activity
            android:name=".showCart"
            android:exported="false" />
        <activity
            android:name=".listOrders"
            android:exported="false" />
        <activity
            android:name=".StoreList"
            android:exported="false" />
        <activity
            android:name=".ListProducts"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ShowLoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>